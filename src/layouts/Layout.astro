---
import Navbar from "../components/Navbar.astro";
import "@fontsource/fira-sans/400.css";
import "@fontsource/fira-sans/500.css";
import "@fontsource/fira-sans/600.css";
import "@fontsource/fira-sans/700.css";
import "@fontsource/fira-sans/900.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <!-- Standard Favicon -->
    <link rel="icon" href="/favicon.ico" type="image/x-icon" />

    <!-- Android Chrome 192x192 -->
    <link rel="icon" sizes="192x192" href="/android-chrome-192x192.png" />

    <!-- Android Chrome 512x512 -->
    <link rel="icon" sizes="512x512" href="/android-chrome-512x512.png" />

    <!-- Apple Touch Icon (Optional, for iOS devices) -->
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />

    <!-- Web App Manifest (for Android/Chrome) -->
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="generator" content={Astro.generator} />
    <title>Ido Geva | Portfolio</title>
  </head>
  <body>
    <Navbar />
    <main
      class="md:p-0 p-3 max-w-screen-xl mx-auto md:mt-[98px] flex flex-col items-start justify-center gap-10"
    >
      <slot />
    </main>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    background-color: #faf8f2;
    font-family: "Fira Sans", sans-serif;
  }
</style>
