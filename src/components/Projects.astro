<div class="mt-[150px] pb-10">
  <h2 class="text-2xl md:text-4xl text-brighter font-bold">Projects</h2>
  <div class="mt-5 gap-7 grid grid-cols-1 md:grid-cols-2 grid-rows-1">
    <div class="gap-9 flex flex-col items-start justify-start">
      <h4 class="text-xl text-dark-bright italic font-medium">
        Freelance Projects
      </h4>
      <Project
        href="/posts/yo-automation"
        title="YO Automation"
        description="YO Automation provides courses about automation for the youtube platform."
      />
      <Project
        href="/posts/securehost"
        title="SecureHost"
        description="SecureHost provides cloud solutions for small to medium businesses."
      />
      <Project
        href="/posts/empire-hosting"
        title="Empire Hosting"
        description="Empire Hosting is an hosting company based in israel, they provide cloud solutions for businesses."
      />
      <Project
        href="/posts/host-local"
        title="HostLocal"
        description="HostLocal is an israeli company that provides cloud solutions to small and large businesses."
      />
      <Project
        href="/posts/localmulti"
        title="LocalMulti"
        description="LocalMulti provides simple vps services, and website hosting to small businesses."
      />
    </div>
    <!-- Other Projects -->
    <div class="gap-9 flex flex-col items-start justify-start">
      <h4 class="text-xl text-dark-bright italic font-medium">
        Other Projects
      </h4>
      <Project
        href="/posts/shipc"
        title="ShipC"
        description="A C implementation of my programming language Ship"
      />
      <Project
        href="/posts/stash"
        title="Stash"
        description="My cyber class final project. a git + github like service, made with nothing but python default packages."
      />
      <Project
        href="/posts/wrap"
        title="Wrap"
        description="A redis clone built with the Java language."
      />
    </div>
  </div>
</div>
